<div class="text-center section-header">
  <h2>All <span class="room-instance-name"><%= @instance.title %></span> Rooms</h2>
</div>

<div class="list-group room-list">
  <%= render rooms %>
</div>

<div class="room-control">
  <% if can? :create_room_in, @instance %>
    <%= link_to 'Add New Room', new_room_instance_path(@instance, access_token: params[:access_token].present? ? params[:access_token]:nil), class: 'button button-ok' %>
  <% end %>
</div>
