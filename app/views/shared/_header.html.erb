<div class="header-container">
  <div class="header-hamburger">
    <a class="mburger" href="#my-menu">
      <b></b>
      <b></b>
      <b></b>
    </a>
  </div>

  <div class="header-logo">
    <%= image_tag asset_path('logo.png'), alt: 'logo' %>
  </div>

  <nav id="my-menu">
    <ul>
      <% unless current_or_guest_user.username.include?('guest') %>
